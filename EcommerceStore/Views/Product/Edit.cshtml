@model ProductModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>

<form method="post" id="editProduct">
    <input type="hidden" name="id" value="@Model.id" />
    <label>Name</label>
    <input type="text" name="name" value="@Model.Name" />
    <br />

    <label>Description</label>
    <input type="text" name="Description" value="@Model.Description" />

    <br />

    <label>Price</label>
    <input type="number" name="Price" value="@Model.Price" />

    <br />
    <button type="button" id="btnUpdate">Save</button>
</form>

<script>
    $("#btnUpdate").click(function () {
        $.ajax({
            type: "POST",
            url: '/Product/edit',
            data: $("#editProduct").serialize()
        })
            .done(function (response) {
                $("#tableContainer").html(response);
                $("#actionContainer").html(" ");
                // alert('done');
            })
            .fail(function (XMttpRequest, textStatus, errorThrown) {
                alert("fail");
            });
    });
</script>